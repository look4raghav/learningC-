#include <stdio.h>

// Function to check if a number is prime
int isPrime(int num) {
    if (num <= 1) {
        return 0;                              // false
    }

    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;                          // false
        }
    }

    return 1;                                  // true
}

int main() {
    int num;

    printf("Enter a number: ");
    scanf("%d", &num);

    if (isPrime(num)) {
        printf("%d is a prime number.\n", num);
    } else {
        printf("%d is not a prime number.\n", num);
    }

    return 0;
}
